<view class="main">
    <view wx:if="{{hasList}}">
        <view class="cart-box">
            <view class="cart-list" wx:for="{{carts}}" wx:key="{{index}}">
                <t-icon wx:if="{{item.selected}}" size="25" name="check-circle" color="red" data-index="{{index}}"  class="cart-pro-select" bindtap="selectList"/>
                <t-icon wx:else size="25" name="minus-circle" color="gray" class="cart-pro-select" data-index="{{index}}" bindtap="selectList"/>
                <navigator url="../details/details?id={{item.id}}"><image class="cart-thumb" src="{{item.image}}"></image></navigator>
                <text class="cart-pro-name">{{item.title}}</text>
                <text class="cart-pro-price">￥{{item.price}}</text>
                <view class="cart-count-box">
                    <text class="cart-count-down" bindtap="minusCount" data-index="{{index}}">-</text>
                    <text class="cart-count-num">{{item.num}}</text>
                    <text class="cart-count-add" bindtap="addCount" data-index="{{index}}">+</text>
                </view>
                <text class="cart-del" bindtap="deleteList" data-index="{{index}}">×</text>
            </view>
        </view>

        <view class="cart-footer">
            <t-icon wx:if="{{selectAllStatus}}" size="20" name="check-circle"  color="#fff" class="total-select" bindtap="selectAll"/>
            <t-icon wx:else size="20" name="minus-circle" color="#fff" class="total-select" bindtap="selectAll"/>
            <navigator url="../orders/orders"><view class="order-icon"></view></navigator>
            <text>全选</text>
            <text class="cart-toatl-price">￥{{totalPrice}}</text>
        </view>
    </view>
    <view wx:else>
        <view class="cart-no-data">购物车是空的哦~</view>
    </view>
</view>